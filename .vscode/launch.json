    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker - XDebug3",
            "type": "php",
            "hostname": "localhost",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html/laravel": "${workspaceFolder}"
            },
            "xdebugSettings": {
                "max_children": 500,
                "max_data": 500,
                "show_hidden": 1,
                "max_depth": 4
            }
        }
    ]
}
